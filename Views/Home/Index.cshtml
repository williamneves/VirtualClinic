@{
    ViewData["Title"] = "VirtualClinic";
}
@{
    <div class="m-auto my-2 w-50">
        <p class='fw-bold text-info text-center'>
            @TempData["Logout"]
        </p>
    </div>
    if (TempData["AuthError"] != null)
    {
        <div class="col-5 text-center m-auto my-3">
            <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                </symbol>
                <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
                </symbol>
                <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                </symbol>
            </svg>

            <div class="alert alert-warning d-flex align-items-center" role="alert">
                <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Info:">
                    <use xlink:href="#info-fill"/>
                </svg>
                <div>
                    @TempData["AuthError"]
                </div>
            </div>
        </div>
    }
}


<div class="container col-10 col-sm-12 p-3">
    <div class="row flex-lg-row-reverse align-items-center g-5 py-3">
        <div class="col-10 col-sm-8 col-lg-6">
            <img src="~/imgs/hero1.png" class="d-block mx-auto img-fluid" alt="Bootstrap Themes" width="700" height="500" loading="lazy">
        </div>
        <div class="col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3 text-gray-700">Talk with your doctor <span class="text-blue-600">NOW!</span></h1>
            <p class="lead ">Your health can not wait! Talk with a real doctor right now.</p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                <button type="button" class="btn btn-primary btn-lg px-4 me-md-2"><i class="bi bi-calendar-check"></i> Make Appoitment</button>
                <button type="button" class="btn btn-outline-secondary btn-lg px-4"><i class="bi bi-info-circle"></i> About Us</button>
            </div>
        </div>
    </div>
</div>


<div class="container-md px-4 py-5" id="icon-grid">
    <h4 class="pb-1 border-bottom">Why use Virtual Clinic?</h4>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 py-3">
        <div class="col d-flex align-items-start">
            <i class="bi bi-hourglass-top flex-shrink-0 me-3 fs-3"></i>
            
            <div>
                <h4 class="fw-bold mb-0">Save Time!</h4>
                <p>Don't wait too long to talk with your doctor.</p>
            </div>
        </div>
        <div class="col d-flex align-items-start">
            <i class="bi bi-phone flex-shrink-0 me-3 fs-3"></i>
            <div>
                <h4 class="fw-bold mb-0">At your hand!</h4>
                <p>Stay at your confort home and without aglomeration risks.</p>
            </div>
        </div>
        <div class="col d-flex align-items-start">
            <i class="bi bi-piggy-bank flex-shrink-0 me-3 fs-2"></i>
            <div>
                <h4 class="fw-bold mb-0">Save Money</h4>
                <p>Low cost for your and for the Doctor. Pay less for more!.</p>
            </div>
        </div>
    </div>
</div>

