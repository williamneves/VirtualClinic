@{
    ViewData["Title"] = "Patient Inbox";
    Layout = "_LayoutBS";
}

@model Message

<div class="row">

        <div class="col-12 col-sm-4">
            <div class="list-group">
                @foreach (Provider i in ViewBag.AllProviders)
                {
                    <a href="#" class="list-group-item" aria-current="true" value="@i.ProviderId" onclick="ShowMessages(@i.ProviderId, @ViewBag.Patient.PatientId)">@i.User.FirstName @i.User.LastName</a>
                }
            </div>
        </div>

        <div class="col-12 col-sm-8">
            <div id="PtInbox"></div>
        </div>
        @* <partial name="_InboxPt"/> *@
</div>