@model User

@{
    ViewData["Title"] = "Register";
}

<div class="position-absolute top-50 start-50 translate-middle" style="width:320px;">
@{
    if (TempData["LoginError"] != null)
    {
        <div class="alert bg-red-300 alert-dismissible fade show" role="alert" id="@TempData["LoginError"]">
            <strong>Hey!</strong> Something went wrong.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}


<div class="card p-3 m-auto border-light border-3 rounded-4 bg-primary shadow-lg" >
<partial name="registerPartial" />
</div>

<p class=" my-2 w-100 text-center m-auto"><a asp-action="Login" asp-controller="Auth" class="text-decoration-none">Already an user? <b>Login</b> instead</a></p>
</div>

<script>
let body = document.querySelector('body');
body.classList.add('bg-gray-200');

let btnsubmit = document.querySelector('#btnsubmit-register-page');
btnsubmit.classList.remove('btn-primary');
btnsubmit.classList.add('btn-outline-light');

let logintext = document.querySelector('#registertext-reg-page');
logintext.classList.add('text-light');

if(document.querySelector('#emailnotfound')){
    document.querySelector('#floatingInput').classList.add('is-invalid');
}
if(document.querySelector('#passwordincorrect')){
    document.querySelector('#floatingPassword').classList.add('is-invalid');
}

</script>