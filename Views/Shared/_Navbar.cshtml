@using Microsoft.AspNetCore.Http

<nav class="navbar shadow-sm navbar-expand-md navbar-light border border-top-0 border-end-0 border-start-0 border-2 border-color-yellow-300 bg-white"
    aria-label="Fourth navbar example">
    <div class="container-md">
        <i class='bx bx-menu'></i>
        <a class="navbar-brand" asp-action="Index" asp-controller="Home">VirtualClinic</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample04"
            aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExample04">
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/">Home</a>
                </li>
                @{
                    if (@ViewBag.UserLoggedIn != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-action="PatientDashboard" asp-controller="Patient">Welcome</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Login" asp-controller="Auth">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Register" asp-controller="Auth">Register</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdown04" data-bs-toggle="dropdown"
                               aria-expanded="false">Admin</a>
                            <ul class="dropdown-menu" aria-labelledby="dropdown04">
                                <li><a class="dropdown-item" asp-action="RegisterProvider" asp-controller="Auth" >Provider Register</a></li>
                                <li><a class="dropdown-item" asp-action="RegisterProvider" asp-controller="Auth" >Admin Access</a></li>
                            </ul>
                        </li>
                    }
                }
                @* <li class="nav-item dropdown"> *@
                @*     <a class="nav-link dropdown-toggle" href="#" id="dropdown04" data-bs-toggle="dropdown" *@
                @*     aria-expanded="false">Dropdown</a> *@
                @*     <ul class="dropdown-menu" aria-labelledby="dropdown04"> *@
                @*     <li><a class="dropdown-item" href="#">Action</a></li> *@
                @*     <li><a class="dropdown-item" href="#">Another action</a></li> *@
                @*     <li><a class="dropdown-item" href="#">Something else here</a></li> *@
                @*     </ul> *@
                @*     </li> *@
            </ul>
            @{
                if (@ViewBag.UserLoggedIn != null)
                {
                    <a asp-action="logout" asp-controller="Auth" class='btn btn-sm btn-outline-info' type="button">Logout</a>
                }
                else
                {
                    <button class="btn btn-outline-primary btn-sm" onclick="loginModal('registermodal')"><i class="fa-duotone fa-arrow-right-to-arc"></i> Sign-in</button>
                }
            }
        </div>
    </div>
</nav>
<div id="registermodal"></div>
<script src="~/js/site.js" asp-append-version="true"></script>
<script>
    document.querySelectorAll(".nav-link").forEach(link => {
        if (link.getAttribute("href") === window.location.pathname) {
            link.classList.add("active");
            link.classList.add("fw-bold");
        }
    });

    let arrow = document.querySelectorAll(".arrow");
    for (var i = 0; i < arrow.length; i++) {
        arrow[i].addEventListener("click", (e) => {
            let arrowParent = e.target.parentElement.parentElement;//selecting main parent of arrow
            arrowParent.classList.toggle("showMenu");
        });
    }
    let sidebar = document.querySelector(".sidebar");
    let sidebarBtn = document.querySelector(".bx-menu");
    console.log(sidebarBtn);
    sidebarBtn.addEventListener("click", () => {
        sidebar.classList.toggle("close");
    });
</script>