@{
    ViewData["Title"] = "Provider Inbox";
    Layout = "_LayoutBS";
}

@model Message

<div class="row">

        <div class="col-12 col-sm-4">
            
            <div class="list-group">
                <div class= "list-group-item m-3"aria-current="true"> List of Conversations</div>
                @foreach (Patient i in ViewBag.AllPatients)
                {
                    <a href="#" class="list-group-item m-3" value="@i.PatientId" onclick="ShowProviderMessages(@ViewBag.Provider.ProviderId, @i.PatientId)">@i.User.FirstName
                        @i.User.LastName</a>
                }
            </div>

        </div>

        <div class="col-12 col-sm-8">
            <div id="PrInbox"> </div>
        </div>

</div>