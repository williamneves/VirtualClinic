@{
    ViewData["Title"] = "Welcome";
    Layout = "_LayoutBS";
}

<div class="mainbody">

</div>
<div class="row">
    <div class="col-12 col-sm-4">

        <div class="sticky-top" style="top: 4rem; z-index: 1">

            <div class="card col-sm-10 col-10 mx-auto mb-4 bg-gray-500 rounded-3">

                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRptIbvFgU67rEonXt8DIq-1UB6FSQcemQtdA&usqp=CAU"
                    alt="Profile Picture" class="rounded-circle mx-auto border border-5 shadow border-white w-50 my-2"
                    alt="Profile Picture">
                @* <h4 class="my-2 text-center"> @ViewBag.UserLoggedIn.FirstName @ViewBag.UserLoggedIn.LastName</h4> *@
                <h4 class="my-2 text-center"> ## PROVDER NAME ##</h4>
                <a href="/edit/patientprofile" class="btn btn-sm btn-outline-light col-8 mx-auto my-3"><i
                        class="bi bi-gear"></i> Edit Profile</a>
            </div>

            <div class="card col-sm-10 col-10 mx-auto mb-4 bg-gray-100 rounded-3">
                <div class="card-header border-bottom bg-gray-500">
                    <span class="card-title fw-bold"></span>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item bg-gray-100">Number of Appointments Today: 35</li>
                        <li class="list-group-item bg-gray-100">Links to References</li>
                        <li class="list-group-item bg-gray-100 p-0 m-0">
                            @* <partial name="_Allergies-MedHx" /> *@
                        </li>
                    </ul>
                </div>
            </div>
        </div>


    </div>

    <div class="col-12 col-sm-8">
        <div class="col-sm-12">
            <div class="btn-group w-100">
                <button type="button" class="btn btn-outline-primary col-sm-9" disabled>
                    <small>“Books are a uniquely portable magic.”</small>
                </button>
                <button type="button" class="btn btn-primary col-sm-3 dropdown-toggle" data-bs-toggle="dropdown"
                    data-bs-display="static" aria-expanded="false">
                    Extra
                </button>
                <ul class="dropdown-menu dropdown-menu-lg-end">
                    <li>
                        <a class="dropdown-item" href="#">Settings</a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="#">Edit Account Info</a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="#">Log Out</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-sm-12 row me-0 mt-3 justify-content-between">
            <div class="col-sm-4 col-md-12 col-lg-4">
                <div class="card">

                    <div class="card-body bg-gray-400 p-2 text-center">
                        <h6 class="card-title"> Labs to Review:</h6>
                        <hr class="my-2 mx-auto">
                        <p class="display-6">3</p>
                        <hr class="my-2 mx-auto">
                        <small class="text-muted"></small>
                    </div>

                </div>
            </div>
            <div class="col-sm-4 col-md-12 col-lg-4">
                <div class="card">

                    <div class="card-body bg-gray-400 p-2 text-center">
                        <h6 class="card-title">Messages:</h6>
                        <hr class="my-2 mx-auto">
                        <p class="display-6">5</p>
                        <hr class="my-2 mx-auto">
                        <small class="text-muted"></small>
                    </div>
                </div>
            </div>
            <div class="col-sm-4 col-md-12 col-lg-4">
                <div class="card">

                    <div class="card-body bg-gray-400 p-2 text-center">
                        <h6 class="card-title">Next Appointment:</h6>
                        <hr class="my-2 mx-auto">

                        @if (ViewBag.NextAppointment != null)
                        {
                            <p class="fs-3"> @ViewBag.NextAppointment.DateTime.ToString("MMMM dd") at
                                @ViewBag.NextAppointment.DateTime.ToString("h:mm tt")</p>
                            <hr class="my-2 mx-auto">
                            <small class="text-muted fst-italic">Dr.
                                @ViewBag.NextAppointment.Provider.User.PreferredName</small>
                        }
                        else
                        {
                            <p class="fs-3"> You have No Upcoming Appointments Scheduled</p>
                        }
                    </div>

                </div>
            </div>
        </div>


        <div class="rowtwo">

            <div>
                <h4>Appointment Calendar</h4>
            </div>
            @* CALENDAR TABS *@
            <div>
                <div>
                    <partial name="_ProviderCalendar.cshtml"/>
                </div>
            </div>


            @* <div class="card">
                <div class="card-header bg-gray-500">
                    <h5 class="mb-0">Patient Information:</h5>
                </div>
            </div> *@
        </div>
    </div>

    @* Canvas *@
    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
        @* <div class="offcanvas-header">
            <p>Patient Info</p>
            </div>

